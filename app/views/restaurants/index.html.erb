<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <div class="row">
    <div class="col-4">
      <div class="card m-3" style="width: 18rem;">
        <img class="card-img-top" src="https://picsum.photos/286/180" alt="Card image cap">
        <div class="card-body">
          <h4 class="card-title"><%= restaurant.name.capitalize %></h4>
          <h6 class="card-subtitle mb-2 text-muted"><p><%= restaurant.category %></p></h6>
          <p class="card-text"><%= restaurant.address %></p>
          <p class="card-text"><%= restaurant.phone_number %></p>
          <p><%= link_to 'See details', restaurant_path(restaurant) %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
